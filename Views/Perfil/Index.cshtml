@inject SessionHelper SessionHelper;
@model Web_Embaquim.ViewModel.CombinedViewModel;
@{
    var fotoPerfil = SessionHelper.GetFotoPerfil();
}
<section class="alterar-perfil">
    <div class="container-fluid ">
        <div class="fundo-branco-perfil ">
            <div class="d-flex ">
                <!-- Imagem de Perfil -->
                <div class="box-imagem-perfil rounded-circle overflow-hidden d-flex box-foto-perfil">
                    <img id="perfilImg" src="@Model.FuncionarioViewModel.FotoPerfil" alt="Foto de Perfil" class="img-perfil" style="cursor: pointer;">
                </div>

                <!-- Modal -->
                <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="profileModalLabel">Foto de Perfil</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <img src="@Model.FuncionarioViewModel.FotoPerfil" alt="Foto de Perfil Grande" style="width: 100%; height: auto;">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center ">
                    <div class="d-flex flex-column  ">
                        <div class="fw-bolder" style="margin-right: auto">
                            <h3>@Model.FuncionarioViewModel.NomeFunc</h3>
                        </div>
                        <div class="fw-bolder">
                            <h5>@Model.FuncionarioViewModel.Funcao</h5>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row d-flex ">
                <div class="fw-bolder d-flex justify-content-between">
                    <div class="">
                        <h5>Pontos Distribuir: @Model.FuncionarioViewModel.PontosDis</h5>
                    </div>
                    <div class="">
                        <h5>Pontos Reconhecidos: @Model.FuncionarioViewModel.PontosRec</h5>
                    </div>
                </div>
                <div class="icon-container d-flex" style="margin-top: 20px; ">
                    <div class="d-flex flex-column">
                        <i class="fa-regular  fa-face-smile icon-rec-perfil selectable-icon" data-message="Ser Amigável: Significa ser cordial, gentil e acolhedor, demonstrando interesse genuíno e empatia nas interações com os outros."></i>
                        <p class="m-auto fw-bolder p-med">@Model.FuncionarioViewModel.RecAmigavel</p>
                    </div>
                    <div class="d-flex flex-column">
                        <i class="fa-regular fa-lightbulb icon-rec-perfil selectable-icon" data-message="Ser Inovador: Envolve a capacidade de criar ou introduzir algo novo e original, seja em ideias, processos ou produtos, buscando constantemente melhorias e soluções criativas."></i>
                        <p class="m-auto fw-bolder p-med">@Model.FuncionarioViewModel.RecInovador</p>
                    </div>
                    <div class="d-flex flex-column">
                        <i class="fa-solid fa-star icon-rec-perfil selectable-icon" data-message="Ser Protagonista: Significa assumir responsabilidade e iniciativa em situações, sendo um líder ativo na condução de eventos ou circunstâncias importantes."></i>
                        <p class="m-auto fw-bolder p-med">@Model.FuncionarioViewModel.RecProtagonista</p>
                    </div>
                    <div class="d-flex flex-column">
                        <i class="fa-solid fa-user-tie icon-rec-perfil selectable-icon" data-message="Profissionalismo: Refere-se à conduta ética, habilidades técnicas e comportamento adequado esperados em ambientes de trabalho, demonstrando comprometimento, competência e respeito."></i>
                        <p class="m-auto fw-bolder p-med">@Model.FuncionarioViewModel.RecProfissionalismo</p>
                    </div>
                </div>
                <div id="message-box" class="message-box" style="width: 100vh"></div>
            </div>
        </div>
            <div class="d-flex justify-content-center align-items-center">
                <h1 class="align-text-center ">Histórico de Reconhecimentos</h1>
            </div>     

        <div class="container-fluid">
            <div id="dataContainer" style="display:none;">
                <div id="dataItems"></div>
            </div>
        </div>
    </div>

</section>

