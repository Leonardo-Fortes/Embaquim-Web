@{
    var mensagemErro = TempData["MensagemErro"] as string;
}

@if (!string.IsNullOrEmpty(mensagemErro))
{
    <div class="alert alert-danger" role="alert">
        @mensagemErro
    </div>
}

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <
    <title>@ViewData["Title"] - Embaquim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRH.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body class="bgLogin">
    <div class="box">
        <div class="container-login ">
            <div class="top-header">
                <span >
                    <img src="~/Imagens/logo2.png" alt="Logo Embaquim">
                </span>
            </div>

            <form action="~/Acesso/ChecarLogin" method="post">
                <div class="input-field">
                    <input type="text" class="input-login" name="usuario" id="usuario" placeholder="Usuário" required />
                    <i class="bi bi-person-circle"></i>
                </div>

                <div class="input-field">
                    <input type="password" class="input-login" name="senha" id="senha" placeholder="Senha" required />
                    <i class="bi bi-file-lock2"></i>
                </div>
                
                <div class="input-field">
                    <input type="submit" class="input-submit" value="Entrar" />
                </div>
            </form>
            <button onclick="abrirFormularioLogin()"class="input-submit my-3" style="cursor:pointer;">Cadastre-se</button>
            
        </div>
    </div>
    <div class="overlay-login" id="overlay-login">
        <div class="formulario-login" id="overlay-login " style="position: absolute; width: 500px;">
           
            <h2 class="d-flex justify-content-center" style="margin-bottom: 15px;">Cadastre-se</h2>
            <a onclick="fecharFormularioLogin()"><i class="fa-solid fa-xmark icon-cad-acesso"></i></a>
            <form id="userForm">
                <div class="form-group">
                    <label for="NomeCad">Nome </label>
                    <input class="form-control" type="text" name="NomeCad" id="NomeCad"><br>
                </div>
                <div class="form-group">
                    <label for="SobrenomeCad">Sobrenome </label>
                    <input type="text" name="SobrenomeCad" id="SobrenomeCad" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="CpfCad">CPF</label>
                    <input type="text" name="CpfCad" class="form-control" id="CpfCad"><br>
                </div>
                <div class="form-group">
                    <label for="DataNasciCad">Data de nascimento</label>
                    <input type="date" name="DataNasciCad" class="form-control" id="DataNasciCad"><br>
                </div>
                <div class="form-group">
                    <label for="FuncaoCad">Função </label>
                    <input type="text" name="FuncaoCad" id="FuncaoCad" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="EmailCad">Email </label>
                    <input type="email" name="EmailCad" id="EmailCad" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="UsuarioCad">Usuário</label>
                    <input type="text" name="UsuarioCad" id="UsuarioCad" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="SenhaCad">Senha</label>
                    <input type="password" name="SenhaCad" id="SenhaCad" class="form-control"><br>
                </div>
                <div class="form-group">
                    <label for="ConfSenhaCad">Confirmar Senha</label>
                    <input type="password" name="ConfSenhaCad" id="ConfSenhaCad" class="form-control"><br>
                </div>
                <button type="button" onclick="EnviarCadastro()" class="btn btn-primary d-flex" style="margin-left: auto;">Enviar</button>
            </form>
        </div>
    </div>
    <script src="~/js/site.js"></script>

</body>
</html>